extends /_include/_layout
append variables
  - var directory ='/'
  - var imgPath = '/assets/img/'
block css
block js

block body
  main.l-wrap
    .p-top
      .p-top_head
        .l-container
          .title
            h1 アニマトメ#[span -animatome-]

      .p-top_body
        .l-container
          section
            h2 サンプル
            ul
              each val in site.anime
                li
                  a(href=val.id+"_"+val.name_en+"/")
                    if val.gif
                      .img(style="background-image: url("+imgPath+val.name_en+".gif);")
                    else
                      .img(style="background-image: url(https://placehold.jp/dedede/5e5e5e/270x180.png?text=Animation);")
                    h4=val.name_jp

          section
            h2 参考になる（したい）サイト
            .tableWrap
              table
                thead
                  tr
                    th サイト
                    th サンプル
                tbody#js-links-table
                  //- each val in site.links
                  //-   tr(id=val.id)
                  //-     th
                  //-       a(href=val.link, target="_blank", rel="noopener noreferrer") #{val.name}
                  //-     td
                  //-       if val.sample
                  //-         a(href=val.sample) あり→
                  //-       else
                  //-         span -

          section
            h2 AfterEffects
            .tableWrap
              table
                thead
                  tr
                    th AfterEffectsでつくったもの
                tbody
                  each val in site.af
                    tr
                      td
                        a(href=val.link, target="_blank", rel="noopener noreferrer") #{val.name}

    include /_include/_releaseNote