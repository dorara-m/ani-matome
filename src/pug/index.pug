extends /_include/_layout
append variables
  - var directory ='/'
  - var imgPath = '/assets/img/'
block css
block js

block body
  main.l-wrap
    .p-top
      .p-top_head
        .l-container
          .title
            h1 アニマトメ#[span -animatome-]

      .p-top_body
        .l-container
          section
            h2 サンプル
            ul
              each val in cmsAnime
                - var formatedNumber = String(val.number).padStart(2, '0');
                li
                  a(href=formatedNumber+"_"+val.name_en+"/")
                    if val.gif
                      .img(style=`background-image: url(${val.gif.url});`)
                    else
                      .img(style="background-image: url(https://placehold.jp/dedede/5e5e5e/270x180.png?text=Animation);")
                    h4=val.name_jp

          section
            h2 参考になる（したい）サイト
            .tableWrap
              table
                thead
                  tr
                    th サイト
                    th サンプル
                tbody
                  each item in cmsLinks
                    tr
                      th
                        a(href=item.link, target="_blank", rel="noopener noreferrer") #{item.title}
                      td
                        if item.sample
                          a(href=item.sample) あり→
                        else
                          span -

          section
            h2 AfterEffects
            .tableWrap
              table
                thead
                  tr
                    th AfterEffectsでつくったもの
                tbody
                  each val in site.af
                    tr
                      td
                        a(href=val.link, target="_blank", rel="noopener noreferrer") #{val.name}

    include /_include/_releaseNote