doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    //- 個別タイトル, メタ情報
    title #{data}あ
    meta(name="description" content=`アニメーション「${name_jp}」のページです。`)

    include /_include/_css
    //- if css
      link(rel="stylesheet", href=`/assets/css/pages/${formatedNumber}_${name_en}.css`)
    block addCss
  body
    .l-wrap
      include /_include/_header
      //- 個別クラスを付与
      .l-pages(class="pg-"+name_en)
        block wrapContent
        .l-container
          .l-pages_head
            h1=name_jp
          .l-pages_content
            section
              block sampleContent
            section
              h2 動作環境
              ul.l-pages_content_caption
                li ○:動作する
                li △:動作するが意図せぬ挙動
                li ☓:動作しない
              //- .l-pages_table
                table
                  thead
                    tr
                      td -
                      th(colspan="3") Mac
                      th(colspan="4") Windows11
                      th(colspan="2") SP
                    tr
                      td ブラウザ
                      th Chrome
                      th Firefox
                      th Safari
                      th Chrome
                      th Firefox
                      th Edge
                      th IE
                      th Safari on iOS
                      th Chrome for Android
                  tbody
                    tr
                      th 対応
                      td=browser.chrome_mac[0]
                      td=browser.firefox_mac[0]
                      td=browser.safari[0]
                      td=browser.chrome_win[0]
                      td=browser.firefox_win[0]
                      td=browser.edge[0]
                      td=browser.ie[0]
                      td=browser.safari_ios[0]
                      td=browser.chrome_android[0]
              block browserContent
    
    include /_include/_releaseNote

  include /_include/_js