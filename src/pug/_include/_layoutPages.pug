block id
- var thisItem = cmsAnime.find(item => item.number === id)
- var formatedNumber = String(thisItem.number).padStart(2, '0');

doctype html
html
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")

    //- 個別タイトル, メタ情報
    title=thisItem.name_jp
    meta(name="description" content=`アニメーション「${thisItem.name_jp}」のページです。`)

    include /_include/_css
    if thisItem.css
      link(rel="stylesheet", href=`/assets/css/pages/${formatedNumber}_${thisItem.name_en}.css`)
    block addCss
  body
    .l-wrap
      include /_include/_header
      //- 個別クラスを付与
      .l-pages(class="pg-"+thisItem.name_en)
        block wrapContent
        .l-container
          .l-pages_head
            h1=thisItem.name_jp
          .l-pages_content
            section
              block sampleContent
            section
              h2 動作環境
              ul.l-pages_content_caption
                li ○:動作する
                li △:動作するが意図せぬ挙動
                li ☓:動作しない
              .l-pages_table
                table
                  thead
                    tr
                      td -
                      th(colspan="3") Mac
                      th(colspan="4") Windows11
                      th(colspan="2") SP
                    tr
                      td ブラウザ
                      th Chrome
                      th Firefox
                      th Safari
                      th Chrome
                      th Firefox
                      th Edge
                      th IE
                      th Safari on iOS
                      th Chrome for Android
                  tbody
                    tr
                      th 対応
                      td(data-status=thisItem.browser.chrome_mac[0])=thisItem.browser.chrome_mac[0]
                      td(data-status=thisItem.browser.firefox_mac[0])=thisItem.browser.firefox_mac[0]
                      td(data-status=thisItem.browser.safari[0])=thisItem.browser.safari[0]
                      td(data-status=thisItem.browser.chrome_win[0])=thisItem.browser.chrome_win[0]
                      td(data-status=thisItem.browser.firefox_win[0])=thisItem.browser.firefox_win[0]
                      td(data-status=thisItem.browser.edge[0])=thisItem.browser.edge[0]
                      td(data-status=thisItem.browser.ie[0])=thisItem.browser.ie[0]
                      td(data-status=thisItem.browser.safari_ios[0])=thisItem.browser.safari_ios[0]
                      td(data-status=thisItem.browser.chrome_android[0])=thisItem.browser.chrome_android[0]
              block browserContent
    
    include /_include/_releaseNote

  include /_include/_js
